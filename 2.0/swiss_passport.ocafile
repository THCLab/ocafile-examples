    dateOfIssue="Data wydania"
    documentCode="Kod dokumentu"
    documentNumber="Numer dokumentu"
    documentType="Typ dokumentu"
    fullName="Imię i nazwisko"
    issuedBy="Wydane przez"
    issuingState="Wydający"
    issuingStateCode="Kod wydającego"
