ADD OVERLAY Format
  attribute_formats
   dateOfBirth = "YYMMDD"
   dateOfExpiry = "YYMMDD"
   documentNumber = "[A-Z0-9]{9}"

ADD Overlay Unit
  metric_system="si"
  attribute_units
    optionalPersonalData="cm"

ADD ATTRIBUTE age=Numeric

ADD OVERLAY Unit
  metric_system="si"
  attribute_units
    age="Y"

ADD Overlay ENTRY
  language="fr"
  attribute_entries
    sex
    "F"="Femelle"
    "M"="Mâle"
    "X"="Non spécifié"

